        <div class="content">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>Events</h4>
                </div>
                <div class="panel-body">
                    <form action="events" method="POST">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <input type="number" placeholder="unique_code" class="form-control" name="unique_code"
                                        value="unique_code" id="">

                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-fw fa-file-text-o"></i>
                                        </span>
                                        <input type="text" class="form-control" placeholder="eventTitle" value="{{eventTitle}}"
                                            name="eventTitle" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2"></div>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                    <input type="date" class="form-control" placeholder="endDate" name="period" value="{{startDate}}"
                                        placeholder="Start Date" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </span>
                                        <input type="date" class="form-control" name="endDate" value="{{endDate}}"
                                            placeholder="endDate" name="period" value="{{startDate}}" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2"></div>
                            <div class="col-md-8">
                                <div class="input-group">
                                    <div class="fileinput fileinput-new" data-provides="fileinput">
                                        <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                            <img data-src="holder.js/200x150" src="#" value="{{image}}" name="image"
                                                alt="profile">
                                        </div>
                                        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"></div>
                                        <div class="select_align">
                                            <span class="btn btn-primary btn-file">
                                                <span class="fileinput-new">Select image</span>
                                                <span class="fileinput-exists">Change</span>
                                                <input type="file" name="...">
                                            </span>
                                            <a href="#" class="btn btn-primary fileinput-exists" data-dismiss="fileinput">Remove</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-file-upload">
                                    <input type="number" placeholder="Price" class="form-control" name="amount" value="{{amount}}"
                                        id="" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <textarea name="description" value="{{description}}" id="" cols="10" rows="5" class="form-control"
                                        placeholder="Description" required></textarea>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg">submit</button>
                        <input type="reset" value="Reset" class="btn btn-danger btn-lg">
                </div>
                </form>
            </div>
